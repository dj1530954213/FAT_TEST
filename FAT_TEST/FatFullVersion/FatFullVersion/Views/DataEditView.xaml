<UserControl
    x:Class="FatFullVersion.Views.DataEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:FatFullVersion.Shared.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FatFullVersion.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FatFullVersion.ViewModels"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converter:TestResultStatusToColorConverter x:Key="StatusToColorConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converter:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converter:BatchStatusToColorConverter x:Key="BatchStatusToColorConverter" />
        <converter:ModuleTypeToVisibilityConverter x:Key="ModuleTypeToVisibilityConverter" />
        <converter:ModuleTypeToCommandConverter x:Key="ModuleTypeToCommandConverter" />
        <converter:NotApplicableValueConverter x:Key="NotApplicableValueConverter" />
        <converter:DoubleToSlashConverter x:Key="DoubleToSlashConverter" />
        <converter:MonitorStatusToColorConverter x:Key="MonitorStatusToColorConverter" />
        <converter:AlarmStatusToColorConverter x:Key="AlarmStatusToColorConverter" />
        <converter:HardPointTestResultToEnabledConverter x:Key="HardPointTestResultToEnabledConverter" />

        <!--  公共DataGrid样式  -->
        <Style x:Key="DataGridCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border
                            x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#AAAAAA"
                            BorderThickness="0,0,1,1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="LightBlue" />
        </Style>

        <Style x:Key="DataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="RowHeight" Value="50" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="All" />
            <Setter Property="VerticalGridLinesBrush" Value="#AAAAAA" />
            <Setter Property="HorizontalGridLinesBrush" Value="#AAAAAA" />
            <Setter Property="Background" Value="#607D8B" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CellStyle" Value="{StaticResource DataGridCellStyle}" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly" />
            <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="IsHitTestVisible" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridRow}">
                                    <Border
                                        x:Name="DGR_Border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                        <SelectiveScrollingGrid>
                                            <SelectiveScrollingGrid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </SelectiveScrollingGrid.ColumnDefinitions>
                                            <SelectiveScrollingGrid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </SelectiveScrollingGrid.RowDefinitions>
                                            <DataGridCellsPresenter
                                                Grid.Column="1"
                                                ItemsPanel="{TemplateBinding ItemsPanel}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            <DataGridDetailsPresenter
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                Visibility="{TemplateBinding DetailsVisibility}" />
                                        </SelectiveScrollingGrid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Background" Value="#607D8B" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,12" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="#333333" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
        </Style>

        <!--  滚动条样式  -->
        <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Background" Value="#555555" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle
                            Fill="{TemplateBinding Background}"
                            RadiusX="4"
                            RadiusY="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="12" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Row="0" Grid.Column="0" />

                            <ScrollBar
                                x:Name="PART_VerticalScrollBar"
                                Grid.Row="0"
                                Grid.Column="1"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                Style="{StaticResource CustomScrollBarStyle}"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                Value="{TemplateBinding VerticalOffset}" />

                            <ScrollBar
                                x:Name="PART_HorizontalScrollBar"
                                Grid.Row="1"
                                Grid.Column="0"
                                Maximum="{TemplateBinding ScrollableWidth}"
                                Orientation="Horizontal"
                                Style="{StaticResource CustomScrollBarStyle}"
                                ViewportSize="{TemplateBinding ViewportWidth}"
                                Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                Value="{TemplateBinding HorizontalOffset}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!--  工具栏: 操作按钮区  -->
            <RowDefinition Height="Auto" />
            <!--  通道对应关系DataGrid  -->
            <RowDefinition Height="*" />
            <!--  测试结果DataGrid  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  工具栏: 操作按钮区  -->
        <Border
            Grid.Row="0"
            Margin="16,8,16,8"
            Padding="12"
            Background="#E6E6E6"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="4">
            <Grid Cursor="Hand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <!--<ColumnDefinition />-->
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="10,5"
                    Padding="8,6"
                    Background="#5B9BD5"
                    Command="{Binding ImportConfigCommand}"
                    Content="导入配置表"
                    Cursor="Hand"
                    FontSize="18"
                    Foreground="White" />

                <Button
                    Grid.Column="1"
                    Margin="10,5"
                    Padding="8,6"
                    Background="#5B9BD5"
                    Command="{Binding SelectBatchCommand}"
                    Content="选择测试批次"
                    Cursor="Hand"
                    FontSize="18"
                    Foreground="White" />

                <Button
                    Grid.Column="2"
                    Margin="10,5"
                    Padding="8,6"
                    Background="#5B9BD5"
                    Command="{Binding FinishWiringCommand}"
                    Content="完成接线确认"
                    FontSize="18"
                    Foreground="White"
                    IsEnabled="{Binding IsWiringCompleteBtnEnabled}" />

                <Button
                    Grid.Column="3"
                    Margin="10,5"
                    Padding="8,6"
                    Background="#4472C4"
                    Command="{Binding StartTestCommand}"
                    Content="通道硬点自动测试"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    IsEnabled="{Binding IsStartTestButtonEnabled}" />

                <!--<Button
                    Grid.Column="4"
                    Margin="10,5"
                    Padding="8,6"
                    Background="#4472C4"
                    Command="{Binding StartTestCommand}"
                    Content="开始测试"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />-->
            </Grid>
        </Border>

        <!--  通道对应关系DataGrid  -->
        <Border
            Grid.Row="1"
            Margin="16,8,16,8"
            Padding="12"
            Background="#F0F7FF"
            BorderBrush="#AAAAAA"
            BorderThickness="1"
            CornerRadius="4">
            <DockPanel>
                <Grid Margin="0,0,0,12" DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="测试队列显示区域" />

                    <ComboBox
                        Name="ChannelTypeComboBox"
                        Grid.Column="1"
                        Width="120"
                        Margin="0,0,8,0"
                        FontSize="18"
                        Foreground="Black"
                        SelectedIndex="0"
                        Text="{Binding SelectedChannelType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Background="WhiteSmoke" Content="AI通道" />
                        <ComboBoxItem Background="WhiteSmoke" Content="AO通道" />
                        <ComboBoxItem Background="WhiteSmoke" Content="DI通道" />
                        <ComboBoxItem Background="WhiteSmoke" Content="DO通道" />
                    </ComboBox>
                </Grid>
                <!--  统一的通道DataGrid  -->
                <!--  ScrollViewer.CanContentScroll="False"可以用于控制滚动速度  -->
                <DataGrid
                    Margin="0,8,0,0"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    FontSize="20"
                    IsReadOnly="True"
                    ItemsSource="{Binding CurrentChannels}"
                    ScrollViewer.CanContentScroll="False"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    Style="{StaticResource DataGridStyle}">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                    </DataGrid.Resources>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="{Binding TestResultStatus, Converter={StaticResource StatusToColorConverter}}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                                        <Border
                                            x:Name="RowBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            SnapsToDevicePixels="True">
                                            <SelectiveScrollingGrid>
                                                <SelectiveScrollingGrid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </SelectiveScrollingGrid.ColumnDefinitions>
                                                <SelectiveScrollingGrid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </SelectiveScrollingGrid.RowDefinitions>
                                                <DataGridCellsPresenter
                                                    Grid.Column="1"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                <DataGridDetailsPresenter
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Visibility="{TemplateBinding DetailsVisibility}" />
                                            </SelectiveScrollingGrid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding TestBatch}"
                            Header="测试批次" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding VariableName}"
                            Header="变量地址" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding TestPLCChannelTag}"
                            Header="测试PLC通道位号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding ChannelTag}"
                            Header="被测PLC通道位号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding ModuleType}"
                            Header="通道类型" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding HardPointTestResult}"
                            Header="通道硬点测试结果" />
                        <DataGridTemplateColumn Width="*" Header="通道复测">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="4"
                                        Padding="10,4"
                                        Background="#5B9BD5"
                                        Command="{Binding DataContext.RetestCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        Content="通道复测"
                                        FontSize="18"
                                        Foreground="White" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" Header="手动测试环节">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="4"
                                        Padding="10,4"
                                        Background="#5B9BD5"
                                        Content="打开手动测试窗口"
                                        FontSize="18"
                                        Foreground="White"
                                        IsEnabled="{Binding HardPointTestResult, Converter={StaticResource HardPointTestResultToEnabledConverter}}"
                                        Visibility="{Binding ModuleType, Converter={StaticResource ModuleTypeToVisibilityConverter}}">
                                        <Button.Command>
                                            <MultiBinding Converter="{StaticResource ModuleTypeToCommandConverter}">
                                                <Binding Path="ModuleType" />
                                                <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType={x:Type DataGrid}}" />
                                            </MultiBinding>
                                        </Button.Command>
                                        <Button.CommandParameter>
                                            <Binding Path="." />
                                        </Button.CommandParameter>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!--  测试结果DataGrid  -->
        <Border
            Grid.Row="2"
            Margin="16,8,16,16"
            Padding="12"
            Background="#FFF8F0"
            BorderBrush="#AAAAAA"
            BorderThickness="1"
            CornerRadius="4">
            <DockPanel>
                <Grid Margin="0,0,0,12" DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding TotalPointCount}" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding TestedPointCount}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding WaitingPointCount}" />
                        <TextBlock
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding SuccessPointCount}" />
                        <TextBlock
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="{Binding FailurePointCount}" />
                    </Grid>
                </Grid>
                <!--  VirtualizingPanel.ScrollUnit="Pixel" 这种方式是在像素层控制滚动速度，需要与上面的通道区域进行性能对比  -->
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    FontSize="20"
                    IsReadOnly="True"
                    ItemsSource="{Binding AllChannels}"
                    Style="{StaticResource DataGridStyle}"
                    VirtualizingPanel.ScrollUnit="Pixel">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                    </DataGrid.Resources>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="Background" Value="{Binding TestResultStatus, Converter={StaticResource StatusToColorConverter}}" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                                        <Border
                                            Background="{Binding TestResultStatus, Converter={StaticResource StatusToColorConverter}}"
                                            BorderThickness="0"
                                            SnapsToDevicePixels="True">
                                            <SelectiveScrollingGrid>
                                                <SelectiveScrollingGrid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </SelectiveScrollingGrid.ColumnDefinitions>
                                                <SelectiveScrollingGrid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </SelectiveScrollingGrid.RowDefinitions>
                                                <DataGridCellsPresenter
                                                    Grid.Column="1"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                <DataGridDetailsPresenter
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    Visibility="{TemplateBinding DetailsVisibility}" />
                                            </SelectiveScrollingGrid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding TestId}"
                            Header="测试ID" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding TestBatch}"
                            Header="测试批次" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="200"
                            Binding="{Binding VariableName}"
                            Header="变量名称" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding ModuleType}"
                            Header="点表类型" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding DataType}"
                            Header="数据类型" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="200"
                            Binding="{Binding TestPLCChannelTag}"
                            Header="测试PLC通道位号" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="200"
                            Binding="{Binding ChannelTag}"
                            Header="被测PLC通道位号" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding RangeLowerLimitValue, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="行程最小值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding RangeUpperLimitValue, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="行程最大值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding Value0Percent, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="0%对比值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding Value25Percent, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="25%对比值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding Value50Percent, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="50%对比值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding Value75Percent, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="75%对比值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding Value100Percent, Converter={StaticResource DoubleToSlashConverter}}"
                            Header="100%对比值" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding LowLowAlarmStatus}"
                            Header="低低报反馈状态" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding LowAlarmStatus}"
                            Header="低报反馈状态" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding HighAlarmStatus}"
                            Header="高报反馈状态" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding HighHighAlarmStatus}"
                            Header="高高报反馈状态" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="50"
                            Binding="{Binding MaintenanceFunction}"
                            Header="维护功能检测" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="150"
                            Binding="{Binding TestTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                            Header="测试时间" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="300"
                            Binding="{Binding HardPointTestResult}"
                            Header="通道硬点测试结果" />
                        <DataGridTextColumn
                            Width="Auto"
                            MinWidth="300"
                            Binding="{Binding ResultText}"
                            Header="测试结果" />
                        <!--<DataGridTemplateColumn Width="Auto" Header="操作">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="4"
                                        Padding="10,4"
                                        Background="#5B9BD5"
                                        Command="{Binding DataContext.RetestCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        Content="单点复测"
                                        FontSize="15"
                                        Foreground="White" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>-->
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!--  批次选择弹窗  -->
        <Popup
            x:Name="BatchSelectionPopup"
            Width="1024"
            Height="760"
            IsOpen="{Binding IsBatchSelectionOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="选择批次" />

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                        IsReadOnly="True"
                        ItemsSource="{Binding Batches}"
                        SelectedItem="{Binding SelectedBatch, Mode=TwoWay}"
                        Style="{StaticResource DataGridStyle}">
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                        </DataGrid.Resources>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridRow}">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                SnapsToDevicePixels="True">
                                                <SelectiveScrollingGrid>
                                                    <SelectiveScrollingGrid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </SelectiveScrollingGrid.ColumnDefinitions>
                                                    <SelectiveScrollingGrid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="Auto" />
                                                    </SelectiveScrollingGrid.RowDefinitions>
                                                    <DataGridCellsPresenter
                                                        Grid.Column="1"
                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                    <DataGridDetailsPresenter
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                        Visibility="{TemplateBinding DetailsVisibility}" />
                                                </SelectiveScrollingGrid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding BatchName}"
                                Header="批次名称" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding ItemCount}"
                                Header="测试项点数" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding CreationDate, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                Header="创建时间" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding FirstTestTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                Header="初次测试时间" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding LastTestTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                Header="最终测试时间" />
                            <DataGridTemplateColumn Width="*" Header="状态">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Foreground="{Binding Status, Converter={StaticResource BatchStatusToColorConverter}}"
                                            Text="{Binding Status}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding ConfirmBatchSelectionCommand}"
                            Content="确定"
                            Foreground="White" />
                        <Button
                            Padding="16,8"
                            Background="#E6E6E6"
                            Command="{Binding CancelBatchSelectionCommand}"
                            Content="取消"
                            Foreground="#333333" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  AI手动测试窗口  -->
        <Popup
            x:Name="AIManualTestPopup"
            Width="500"
            Height="680"
            IsOpen="{Binding IsAIManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="AI手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,5">
                        <!--  第一区域：显示值核对  -->
                        <GroupBox Margin="0,0,0,5" Header="显示值核对">
                            <Grid Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,8,8"
                                    materialDesign:HintAssist.Hint="设定值"
                                    FontSize="16"
                                    Foreground="Black"
                                    Text="{Binding AISetValue, UpdateSourceTrigger=PropertyChanged}" />

                                <Button
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,0,8"
                                    Padding="12,8"
                                    Background="#5B9BD5"
                                    Command="{Binding SendAITestValueCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="测试值下发"
                                    Foreground="White" />

                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAIValueCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  第二区域：高报及高高报核对  -->
                        <GroupBox Margin="0,0,0,12" Header="高报及高高报核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendAIHighAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发高报测试命令"
                                        Foreground="White" />
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendAIHighHighAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发高高报测试命令"
                                        Foreground="White" />
                                    <Button
                                        Width="100"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetAIHighAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button
                                    Grid.Row="1"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.HighAlarmStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAIHighAlarmCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  第三区域：低报及低低报核对  -->
                        <GroupBox Margin="0,0,0,12" Header="低报及低低报核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendAILowAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发低报测试命令"
                                        Foreground="White" />

                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendAILowLowAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发低低报测试命令"
                                        Foreground="White" />
                                    <Button
                                        Width="100"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetAILowAlarmCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button
                                    Grid.Row="1"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.LowAlarmStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAILowAlarmCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>

                        <!--  第四区域：维护功能核对  -->
                        <GroupBox Margin="0,0,0,12" Header="维护功能核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendAIMaintenanceCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发测试命令"
                                        Foreground="White" />

                                    <Button
                                        Width="100"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetAIMaintenanceCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button
                                    Grid.Row="1"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.MaintenanceFunction, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmAIMaintenanceCommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseAIManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  DI手动测试窗口  -->
        <Popup
            x:Name="DIManualTestPopup"
            Width="380"
            Height="300"
            IsOpen="{Binding IsDIManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="DI手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,12">
                        <!--  反馈状态核对区域  -->
                        <GroupBox Margin="0,0,0,12" Header="反馈状态核对">
                            <Grid Margin="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                    <Button
                                        Margin="0,0,8,0"
                                        Padding="12,8"
                                        Background="#5B9BD5"
                                        Command="{Binding SendDITestCommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="下发测试命令"
                                        Foreground="White" />

                                    <Button
                                        Width="100"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        Background="#E6E6E6"
                                        Command="{Binding ResetDICommand}"
                                        CommandParameter="{Binding CurrentChannel}"
                                        Content="复位"
                                        Foreground="#333333" />
                                </DockPanel>

                                <Button
                                    Grid.Row="1"
                                    Padding="16,8"
                                    Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                    Command="{Binding ConfirmDICommand}"
                                    CommandParameter="{Binding CurrentChannel}"
                                    Content="确认通过"
                                    Foreground="White" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseDIManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  DO手动测试窗口  -->
        <Popup
            x:Name="DOManualTestPopup"
            Width="380"
            Height="300"
            IsOpen="{Binding IsDOManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="DO手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,12">
                        <!--  监测状态提示  -->
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{Binding DOMonitorStatus, Converter={StaticResource MonitorStatusToColorConverter}}"
                            Text="{Binding DOMonitorStatus}" />

                        <!--  检测值显示区域  -->
                        <Border
                            Margin="0,0,0,12"
                            Padding="8"
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="18"
                                Foreground="Black"
                                Text="{Binding DOCurrentValue}" />
                        </Border>

                        <!--  操作按钮区域  -->
                        <StackPanel Margin="0,8">
                            <Button
                                Margin="0,0,0,8"
                                Padding="12,8"
                                Background="#5B9BD5"
                                Command="{Binding StartDOMonitorCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="开始检测"
                                Foreground="White" />

                            <Button
                                Padding="16,8"
                                Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                Command="{Binding ConfirmDOCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="确认通过"
                                Foreground="White" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseDOManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!--  AO手动测试窗口  -->
        <Popup
            x:Name="AOManualTestPopup"
            Width="380"
            Height="300"
            IsOpen="{Binding IsAOManualTestOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="True">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="AO手动测试窗口" />

                    <StackPanel Grid.Row="1" Margin="0,12">
                        <!--  监测状态提示  -->
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{Binding AOMonitorStatus, Converter={StaticResource MonitorStatusToColorConverter}}"
                            Text="{Binding AOMonitorStatus}" />

                        <!--  检测值显示区域  -->
                        <Border
                            Margin="0,0,0,12"
                            Padding="8"
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="18"
                                Foreground="Black"
                                Text="{Binding AOCurrentValue}" />
                        </Border>

                        <!--  操作按钮区域  -->
                        <StackPanel Margin="0,8">
                            <Button
                                Margin="0,0,0,8"
                                Padding="12,8"
                                Background="#5B9BD5"
                                Command="{Binding StartAOMonitorCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="开始检测"
                                Foreground="White" />

                            <Button
                                Padding="16,8"
                                Background="{Binding CurrentChannel.ShowValueStatus, Converter={StaticResource AlarmStatusToColorConverter}}"
                                Command="{Binding ConfirmAOCommand}"
                                CommandParameter="{Binding CurrentChannel}"
                                Content="确认通过"
                                Foreground="White" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="8,0"
                            Padding="16,8"
                            Background="#4472C4"
                            Command="{Binding CloseAOManualTestCommand}"
                            Content="关闭"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

    </Grid>
</UserControl>

