<UserControl
    x:Class="FatFullVersion.Views.ConfigEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:FatFullVersion.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <!--  xmlns:converters="clr-namespace:FatFullVersion.Converters"  -->

    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style
            x:Key="TextBoxStyle"
            BasedOn="{StaticResource MaterialDesignTextBox}"
            TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="ComboBoxStyle"
            BasedOn="{StaticResource MaterialDesignComboBox}"
            TargetType="ComboBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="CheckBoxStyle"
            BasedOn="{StaticResource MaterialDesignCheckBox}"
            TargetType="CheckBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <materialDesign:DialogHost IsOpen="{Binding IsLoading}">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <ProgressBar
                        Width="200"
                        Height="20"
                        IsIndeterminate="True" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Text="正在加载..." />
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  标题  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="20,10"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="PLC配置编辑" />

                <!--  主内容区域  -->
                <TabControl Grid.Row="1" Margin="10">
                    <!--  测试PLC配置  -->
                    <TabItem Header="测试PLC配置">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  配置表单  -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  IP地址  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="IP地址:" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.IpAddress}" />

                                    <!--  端口  -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="端口:" />
                                    <TextBox
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.Port}" />

                                    <!--  站号  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="站号:" />
                                    <TextBox
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.Station}" />

                                    <!--  数据格式  -->
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="数据格式:" />
                                    <TextBox
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.DataFormat}" />

                                    <!--  连接超时  -->
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="连接超时(ms):" />
                                    <TextBox
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.ConnectTimeOut}" />

                                    <!--  接收超时  -->
                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="接收超时(ms):" />
                                    <TextBox
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.ReceiveTimeOut}" />

                                    <!--  休眠时间  -->
                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="休眠时间(ms):" />
                                    <TextBox
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.SleepTime}" />

                                    <!--  Socket保持连接时间  -->
                                    <TextBlock
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="Socket保持连接时间:" />
                                    <TextBox
                                        Grid.Row="7"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TestPlcConfig.SocketKeepAliveTime}" />

                                    <!--  地址从0开始  -->
                                    <TextBlock
                                        Grid.Row="8"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="地址从0开始:" />
                                    <CheckBox
                                        Grid.Row="8"
                                        Grid.Column="1"
                                        IsChecked="{Binding TestPlcConfig.AddressStartWithZero}"
                                        Style="{StaticResource CheckBoxStyle}" />

                                    <!--  检查消息ID  -->
                                    <TextBlock
                                        Grid.Row="9"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="检查消息ID:" />
                                    <CheckBox
                                        Grid.Row="9"
                                        Grid.Column="1"
                                        IsChecked="{Binding TestPlcConfig.IsCheckMessageId}"
                                        Style="{StaticResource CheckBoxStyle}" />

                                    <!--  字符串反转  -->
                                    <TextBlock
                                        Grid.Row="10"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="字符串反转:" />
                                    <CheckBox
                                        Grid.Row="10"
                                        Grid.Column="1"
                                        IsChecked="{Binding TestPlcConfig.IsStringReverse}"
                                        Style="{StaticResource CheckBoxStyle}" />

                                    <!--  持久连接  -->
                                    <TextBlock
                                        Grid.Row="11"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="持久连接:" />
                                    <CheckBox
                                        Grid.Row="11"
                                        Grid.Column="1"
                                        IsChecked="{Binding TestPlcConfig.IsPersistentConnection}"
                                        Style="{StaticResource CheckBoxStyle}" />
                                </Grid>
                            </ScrollViewer>

                            <!--  操作按钮  -->
                            <StackPanel
                                Grid.Row="2"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding SaveTestPlcConfigCommand}"
                                    Content="保存配置"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!--  被测PLC配置  -->
                    <TabItem Header="被测PLC配置">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  配置表单  -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  IP地址  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="IP地址:" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.IpAddress}" />

                                    <!--  端口  -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="端口:" />
                                    <TextBox
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.Port}" />

                                    <!--  站号  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="站号:" />
                                    <TextBox
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.Station}" />

                                    <!--  数据格式  -->
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="数据格式:" />
                                    <TextBox
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.DataFormat}" />

                                    <!--  连接超时  -->
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="连接超时(ms):" />
                                    <TextBox
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.ConnectTimeOut}" />

                                    <!--  接收超时  -->
                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="接收超时(ms):" />
                                    <TextBox
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.ReceiveTimeOut}" />

                                    <!--  休眠时间  -->
                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="休眠时间(ms):" />
                                    <TextBox
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.SleepTime}" />

                                    <!--  Socket保持连接时间  -->
                                    <TextBlock
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="Socket保持连接时间:" />
                                    <TextBox
                                        Grid.Row="7"
                                        Grid.Column="1"
                                        Style="{StaticResource TextBoxStyle}"
                                        Text="{Binding TargetPlcConfig.SocketKeepAliveTime}" />

                                    <!--  地址从0开始  -->
                                    <TextBlock
                                        Grid.Row="8"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="地址从0开始:" />
                                    <CheckBox
                                        Grid.Row="8"
                                        Grid.Column="1"
                                        IsChecked="{Binding TargetPlcConfig.AddressStartWithZero}"
                                        Style="{StaticResource CheckBoxStyle}" />

                                    <!--  检查消息ID  -->
                                    <TextBlock
                                        Grid.Row="9"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="检查消息ID:" />
                                    <CheckBox
                                        Grid.Row="9"
                                        Grid.Column="1"
                                        IsChecked="{Binding TargetPlcConfig.IsCheckMessageId}"
                                        Style="{StaticResource CheckBoxStyle}" />

                                    <!--  字符串反转  -->
                                    <TextBlock
                                        Grid.Row="10"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="字符串反转:" />
                                    <CheckBox
                                        Grid.Row="10"
                                        Grid.Column="1"
                                        IsChecked="{Binding TargetPlcConfig.IsStringReverse}"
                                        Style="{StaticResource CheckBoxStyle}" />

                                    <!--  持久连接  -->
                                    <TextBlock
                                        Grid.Row="11"
                                        Grid.Column="0"
                                        Style="{StaticResource LabelStyle}"
                                        Text="持久连接:" />
                                    <CheckBox
                                        Grid.Row="11"
                                        Grid.Column="1"
                                        IsChecked="{Binding TargetPlcConfig.IsPersistentConnection}"
                                        Style="{StaticResource CheckBoxStyle}" />
                                </Grid>
                            </ScrollViewer>

                            <!--  操作按钮  -->
                            <StackPanel
                                Grid.Row="2"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding SaveTargetPlcConfigCommand}"
                                    Content="保存配置"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!--  通道比较表配置  -->
                    <TabItem Header="通道比较表配置">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  操作按钮  -->
                            <StackPanel
                                Grid.Row="0"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding AddComparisonTableCommand}"
                                    Content="添加通道"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />
                            </StackPanel>

                            <!--  DataGrid  -->
                            <DataGrid
                                Grid.Row="1"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="True"
                                HeadersVisibility="All"
                                IsReadOnly="False"
                                ItemsSource="{Binding ComparisonTables}"
                                SelectedItem="{Binding SelectedComparisonTable}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="50"
                                        Binding="{Binding Id}"
                                        Header="ID"
                                        IsReadOnly="True" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding ChannelAddress}"
                                        Header="通道地址" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding CommunicationAddress}"
                                        Header="通讯地址" />
                                    <DataGridComboBoxColumn
                                        Width="*"
                                        Header="通道类型"
                                        ItemsSource="{Binding DataContext.ChannelTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        SelectedItemBinding="{Binding ChannelType}" />
                                    <DataGridTemplateColumn Width="Auto" Header="操作">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    Command="{Binding DataContext.DeleteComparisonTableCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    CommandParameter="{Binding}"
                                                    Content="删除"
                                                    Style="{StaticResource MaterialDesignFlatButton}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!--  保存按钮  -->
                            <StackPanel
                                Grid.Row="2"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding SaveComparisonTablesCommand}"
                                    Content="保存所有通道配置"
                                    Style="{StaticResource MaterialDesignRaisedButton}" />
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>
